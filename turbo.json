{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["COREPACK_HOME"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false
    }
  }
}
